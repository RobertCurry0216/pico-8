--mapgen function

function updatemap(m)
	local c, row, new
	new = {}
	for y=1,128 do
		row = {}
		for x=1,128 do
			c=0
			for dy=-1,1 do
				for dx=-1,1 do
					if 
					y+dy < 1 or
					y+dy > 128 or
					x+dx < 1 or
					x+dx > 128 or
					m[y+dy][x+dx] == 0 then
						c+=1
					end
				end
			end
			if m[y][x] == 0 then
				c-=1
			end
			add(row, c<4 and 1 or 0)
		end
		add(new,row)
	end
	return new
end
